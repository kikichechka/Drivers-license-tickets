<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/icon_card_view_corner_radius">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/common_margin_10"
        app:cardCornerRadius="@dimen/icon_card_view_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/common_margin_20"
            android:layout_marginVertical="@dimen/common_margin_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sequence_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAppearance="@style/style_text_item_answer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/text_answer_margin_start"
                android:text="Разрешен только при технической неисправности ТС"
                android:textAppearance="@style/style_text_item_answer" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>