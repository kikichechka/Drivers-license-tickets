<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_card_item_category_height"
        android:layout_marginHorizontal="@dimen/custom_card_item_category_margin"
        android:layout_marginBottom="@dimen/custom_card_item_category_margin"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/custom_card_item_category_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/custom_card_item_category_margin"
                android:src="@drawable/icon_frames" />

            <TextView
                android:id="@+id/title_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/custom_card_item_category_margin"
                android:gravity="center_vertical"
                android:text="Категория А"
                android:textAppearance="@style/style_title_category" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>